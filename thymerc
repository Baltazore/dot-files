set :timer, 25*60
set :interval, 1
set :tmux, true
set :tmux_theme, "#[fg=mycolor,bg=mycolor]#[fg=%s]%s#[fg=mycolor,bg=mycolor]"

option :b, :break, 'start a break' do
  set :timer, 5*60
  run
end

option :t, :today, 'open today sheet' do
  `vim -O ~/.thyme-today.md ~/.thyme-records.md < \`tty\` > \`tty\``
end

before do
end

after do |seconds_left|
  `mplayer ~/.alarm.mp3 &`
end
